---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Slash Pages - Website Navigation by Rasul Kireev";
const pageDescription = "Explore my collection of slash pages inspired by slashpages.net. Navigate through /about, /now, /uses, and other standard website pages for better discoverability.";
const pageKeywords = "slash pages, website navigation, /about, /now, /uses, slashpages.net, website structure, Rasul Kireev";
---

<BaseLayout
  pageTitle={pageTitle}
  pageDescription={pageDescription}
  pageKeywords={pageKeywords}
>
  <div class="flex flex-col mx-auto mb-10 space-y-6 text-xl prose">
      <h1 class="mt-0 mb-4 text-4xl font-bold md:mb-6 md:text-5xl">Slashes</h1>

      <p>
        Inspired by <a href="https://slashpages.net/">slashepages</a>.
        Will be adding each slowly.
      </p>
      <ul>
        <li><a href="/about">/about</a></li>
        <li><a href="/slashes">/slashes</a></li>
        <li><a href="/now">/now</a></li>
        <li><a href="/uses">/uses</a></li>
        <li><a href="/favourites#feeds">/feeds</a></li>
        <li>/blogroll</li>
        <li>/carry</li>
        <li>/changelog</li>
        <li>/colophon</li>
        <li>/defaults</li>
        <li>/hello</li>
        <li>/ideas</li>
        <li>/interests</li>
        <li>/links</li>
        <li>/nope</li>
        <li>/podroll</li>
        <li>/save</li>
        <li>/sitemap</li>
        <li>/til</li>
        <li>/tip</li>
        <li>/yep</li>
      </ul>

  </div>
</BaseLayout>
