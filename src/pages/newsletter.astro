---
import BaseLayout from '../layouts/BaseLayout.astro';
import newsletter from '../assets/data/newsletters.json';
import FullWidthNewsletter from '../components/FullWidthNewsletter';

const pageTitle = "Tuesday Letter - Newsletter by Rasul Kireev";
const pageDescription = "Subscribe to Tuesday Letter, my weekly newsletter sharing the most interesting articles, resources, and insights I've discovered. Browse past issues and join the community of curious readers.";
const pageKeywords = "Tuesday Letter, newsletter, weekly newsletter, Rasul Kireev, articles, resources, insights, subscribe, email newsletter, tech newsletter, personal newsletter";
---

<BaseLayout
  pageTitle={pageTitle}
  pageDescription={pageDescription}
  pageKeywords={pageKeywords}
>
  <FullWidthNewsletter client:load
    title="Tuesday Letter"
    description="Consider signing up for my personal newsletter. I will share the most interesting articles and resources I've encountered during the week."
    tag="newsletter"
  />

  <div class="mb-4">
    <h1 class="text-4xl">Past Newsletter Issues</h1>
  </div>

  <section id="letters">
    <ul class="list-outside">
      {newsletter.map(letter => (
        <li class="mb-2 text-lg">
            <a class="text-blue-700 border-b-2 hover:text-blue-500 hover:border-blue-500" href={letter.url} target="_blank">
                { letter.title }
            </a>
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>
