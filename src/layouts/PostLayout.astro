---
import Navbar from "../components/Navbar.vue";
import Footer from "../components/Footer.astro";
const {
  postTitle,
  postDescription,
  postTags,
  postSlug,
  socialImageUrl,
  dateCreated,
  dateUpdated,
} = Astro.props;

const schema = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "https://rasulkireev.com/" + postSlug
    },
    "headline": postTitle,
    "datePublished": dateCreated,
    "dateModified": dateUpdated,
    "author": {
        "@type": "Person",
        "name": "Rasul Kireev"
    },
    "publisher": {
        "@type": "Organization",
        "name": "The RK Blog",
        "logo": {
            "@type": "ImageObject",
            "url": "https://rasulkireev.com/logo.png"
        }
    },
    "description": postDescription,
    "image": {
        "@type": "ImageObject",
        "url": socialImageUrl
    }
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>{postTitle}</title>
    <meta name="description" content={postDescription}>
    {postTags && <meta name="keywords" content={postTags} />}
    <meta name="robots" content="index, follow">
    <link rel="canonical" href={"https://rasulkireev.com/" + postSlug}>

    <!-- OG -->
    <meta property="og:title" content={postTitle}>
    <meta property="og:description" content={postDescription}>
    <link rel="canonical" href={"https://rasulkireev.com/" + postSlug}>
    <meta property="og:type" content="article" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:image" content={socialImageUrl}>

    <!-- X -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@rasulkireev">
    <meta name="twitter:creator" content="@rasulkireev">
    <meta name="twitter:title" content={postTitle}>
    <meta name="twitter:description" content={postDescription}>
    <meta name="twitter:image" content={socialImageUrl}>

    <!-- Schema.org -->
    <!-- https://frodeflaten.com/posts/adding-structured-data-to-blog-posts-using-astro/ -->
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />

    <script async defer data-domain="rasulkireev.com" src="https://stats.rasulkireev.com/js/index.js"></script>
    <script defer data-domain="rasulkireev.com" src="https://plausible.cr.lvtd.dev/js/script.js"></script>
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body>
    <div class="flex flex-col max-w-4xl min-h-screen px-6 mx-auto leading-relaxed bg-white light-mode">
      <Navbar client:load />
      <div class="my-4 md:my-10">
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>
