---
import Navbar from "../components/Navbar.vue"
import Footer from "../components/Footer.astro";
const {
  pageTitle,
  pageDescription = "Personal website of Rasul Kireev - thoughts on books, technology, and life",
  pageKeywords = "Rasul Kireev, blog, books, technology, programming, personal development",
  pageAuthor = "Rasul Kireev",
  pageImage,
  pageUrl = Astro.url.href,
  pageType = "website"
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site);

// Generate dynamic OG image using osig.app
const ogImageUrl = pageImage || `https://osig.app/g?site=x&style=base&font=helvetica&eyebrow=rasulkireev.com&title=${encodeURIComponent(pageTitle)}&subtitle=${encodeURIComponent(pageDescription)}&theme=light&fontSize=large`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>{pageTitle}</title>

    <!-- Essential SEO Meta Tags -->
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content={pageKeywords} />
    <meta name="author" content={pageAuthor} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:type" content={pageType} />
    <meta property="og:site_name" content="Rasul Kireev" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@rasulkireev" />
    <meta name="twitter:creator" content="@rasulkireev" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Rasul Kireev",
        "url": "https://rasulkireev.com",
        "sameAs": [
          "https://twitter.com/rasulkireev",
          "https://github.com/rasulkireev",
          "https://linkedin.com/in/rasul-kireev"
        ],
        "jobTitle": "Software Developer",
        "description": "Personal website of Rasul Kireev - thoughts on books, technology, and life",
        "image": "https://rasulkireev.com/logo.png"
      }
    </script>

    <script async defer data-domain="rasulkireev.com" src="https://stats.rasulkireev.com/js/index.js"></script>
    <script defer data-domain="rasulkireev.com" src="https://plausible-v2.cr.lvtd.dev/js/script.js"></script>
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body>
    <div class="flex flex-col max-w-4xl min-h-screen px-6 mx-auto leading-relaxed bg-white light-mode">
      <Navbar client:load />
      <div class="my-4 md:my-10">
        <slot />
      </div>
      <Footer />
    </div>
    <script>
      function addExternalLinkFavicons() {
        const siteHost = window.location.hostname;
        const links = document.querySelectorAll('a[href^="http"]');

        links.forEach((link) => {
          if (!(link instanceof HTMLAnchorElement)) return;
          const href = link.getAttribute("href");
          if (!href) return;

          let url;
          try {
            url = new URL(href);
          } catch {
            return;
          }

          if (!url.hostname || url.hostname === siteHost) return;
          if (link.dataset.faviconApplied === "true") return;
          if (link.querySelector(".external-favicon")) return;

          const favicon = document.createElement("img");
          favicon.className = "external-favicon";
          favicon.alt = "";
          favicon.loading = "lazy";
          favicon.decoding = "async";
          favicon.width = 16;
          favicon.height = 16;
          favicon.src = `https://www.google.com/s2/favicons?domain=${encodeURIComponent(url.hostname)}&sz=32`;
          favicon.style.setProperty("width", "16px", "important");
          favicon.style.setProperty("height", "16px", "important");
          favicon.style.setProperty("margin", "0 0.35rem 0 0", "important");
          favicon.style.setProperty("display", "inline-block", "important");
          favicon.style.setProperty("vertical-align", "text-bottom", "important");

          link.prepend(favicon);
          link.dataset.faviconApplied = "true";
        });
      }

      addExternalLinkFavicons();
    </script>
  </body>
</html>
